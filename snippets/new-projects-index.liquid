<div class="why-us-panel">
         <div style="margin-top: 10px; margin-bottom: 20px;">
             <div style="padding: 10px; color: #f90b0e; text-align: center; font-size: 32px;">
               New Projects
             </div>
             <div style="clear: both;">
             </div>
             <div style="padding: 5px; color: #999; text-align: center; font-size: 20px; margin-top: -10px; margin-bottom: 30px;">
               Not only search but you can pay online too
             </div>
             <!-- experiencend -->
                 <!-- new projects panel starts -->
    {{ collection.description }}

    {% paginate collection.products by 4 %}
      {% if collection.products.size > 0 %}
          {% for product in collection.products %}
            <div style="width: 214px; min-height: 200px; float:left; margin-right: 10px; padding: 5px; border: 1px solid #e0e0e0; border-radius: 3px;" {% cycle '', '', ' class="last-in-row"' %}>
              <div class="product-photo" style="margin:0px auto; text-align: center;"><a href="{{ product.url | within: collection }}">
                <img style="width: 200px; height: 150px; border-radius: 3px; border-radius: 3px;" src="{{ product.images[0] | product_img_url: "medium" }}" alt="{{ product.featured_image.alt | escape }}" /></a>
              </div>
              {% include 'product-desc-index' %}
              <div style="clear: both; height: 10px;">
              </div>
            </div>
          {% endfor %}

        {% if paginate.pages > 1 %}
          <!-- {% include 'pagination' %} -->
        {% endif %}

      {% else %}
        <strong>No products found in this collection.</strong>
      {% endif %}
    {% endpaginate %}
                 <!-- new projects panel ends -->
             <!-- Rated -->
           <div style="clear: both;">
           </div>
         </div>
      </div>
<script type="text/javascript">
  var COLLECTION_URL = "{{ collection.url }}";
</script>